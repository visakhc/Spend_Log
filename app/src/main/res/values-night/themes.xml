    </style>

    <style name="roundedCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_16sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_16sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>

    </style>
    <style name="viewRound">
        <item name="android:radius">@dimen/_10sdp</item>
    </style>
    <style name="CardStyle">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">@dimen/_15sdp</item>

        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
